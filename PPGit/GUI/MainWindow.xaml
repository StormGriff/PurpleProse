        <Style TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#A0000000"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="2000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Border}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
		<Style TargetType="{x:Type ResizeGrip}">
			<Setter Property="OverridesDefaultStyle" Value="True"/>
			<Setter Property="Foreground" Value="Gray"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type ResizeGrip}">
						<Border Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"
                                Width="10"
                                Height="10">
							<Path Data="M7.677,7.5300003 L9.677,7.5300003 9.677,9.5300002 7.677,9.5300002 z M3.786,7.5300003 L5.7859998,7.5300003 5.7859998,9.5300002 3.786,9.5300002 z M0,7.5300003 L2,7.5300003 2,9.5300002 0,9.5300002 z M3.786,3.8280003 L5.7859998,3.8280003 5.7859998,5.8280003 3.786,5.8280003 z M7.677,3.7660003 L9.677,3.7660003 9.677,5.7659999 7.677,5.7659999 z M7.677,0 L9.677,0 9.677,2 7.677,2 z" Fill="{TemplateBinding Foreground}" Height="9.53" Stretch="Fill" VerticalAlignment="Top" Width="9.677"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

	</Window.Resources>

    <Border BorderThickness="1" Background="#FF171717" BorderBrush="#FF171717"
            Name="WindowBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Name="titleRow" Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DockPanel Panel.ZIndex="2" Name="TitleBar">


                <Button Name="CloseButton" Focusable="False" 
                    HorizontalAlignment="Right" 
                        DockPanel.Dock="Right"
                    Width="30" Height="26"
                    Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#A0171717"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{StaticResource Close}"/>
                </Button>

                <Button Name="MaxButton" Focusable="False"
                    HorizontalAlignment="Right"
                    Width="30" Height="26"
                        DockPanel.Dock="Right"
                    Panel.ZIndex="1"
                    Click="MaxButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#A0171717"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{StaticResource Max}"/>
                </Button>

                <Button Name="MinButton" Focusable="False"
                    HorizontalAlignment="Right"
                    Width="30" Height="26"
                        DockPanel.Dock="Right"
                    Panel.ZIndex="1"
                    Click="MinButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#A0171717"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{StaticResource Min}"/>
                </Button>

                <TextBlock Foreground="White"
                       Background="#A0171717"
                       VerticalAlignment="Stretch"
                           DockPanel.Dock="Right"
                       MouseLeftButtonDown="TitleBarText_MouseLeftButtonDown"
                       Panel.ZIndex="1">
                    <TextBlock Name="TitleBarText" Margin="5">
                        Title Bar
                    </TextBlock>
                </TextBlock>
            </DockPanel>


            <Grid Name="GridBackground" Background="Black"
                  Grid.Row="1" Grid.ColumnSpan="2"
                  Panel.ZIndex="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <DockPanel Grid.Row="1">
                    <Menu IsMainMenu="True" DockPanel.Dock="Top" Background="#FF171717" Foreground="White">
						<MenuItem Name="Menu" Header="Menu"  Click="MenuItem_Click" ContextMenuService.IsEnabled="False">
                            <MenuItem.ContextMenu><ContextMenu>
									<MenuItem x:Name="Sup" FontSize="12" Header="Stub"/>
							</ContextMenu></MenuItem.ContextMenu>
                        </MenuItem>
						<MenuItem Name="Theme" Header="Theme"  Click="MenuItem_Click" ContextMenuService.IsEnabled="False">
							<MenuItem.ContextMenu><ContextMenu>
									<MenuItem x:Name="Stub" FontSize="12" Header="Stub"/>
							</ContextMenu></MenuItem.ContextMenu>
						</MenuItem>
						<MenuItem  Name="Add" Header="Add" Click="MenuItem_Click" ContextMenuService.IsEnabled="False">
							<MenuItem.ContextMenu><ContextMenu>
									<MenuItem x:Name="Add_Object"	 FontSize="12" Header="Object"/>
									<MenuItem x:Name="Add_Character" FontSize="12" Header="Character" PreviewMouseLeftButtonUp="Add_Character_LeftMouseUp"/>
									<MenuItem x:Name="Add_Location"  FontSize="12" Header="Location"  PreviewMouseLeftButtonUp="Add_Location_LeftMouseUp"/>
									<MenuItem x:Name="Add_Relationship" FontSize="12" Header="Relationship"/>
							</ContextMenu></MenuItem.ContextMenu>
						</MenuItem>
					</Menu>
                </DockPanel>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="ShowOnlyMajorChars" Padding="2">
                            <TextBlock Text="Only Show Major Characters"/>
                        </CheckBox>

                        
                    </Grid>

                    <DataGrid Name="DataGrid" Grid.Row="0" ItemsSource="{Binding}">
                        <!--I thought this might need to be used for making a proper tree list-->
                    </DataGrid>

					<DockPanel x:Name="TreeList" HorizontalAlignment="Left" Height="483" Panel.ZIndex="0" LastChildFill="False" VerticalAlignment="Top" Width="135">
						<TreeView x:Name="Elements"
								  Loaded="Elements_Loaded"
								  SelectedItemChanged="Elements_SelectedItemChanged"
								  SourceUpdated="Elements_SourceUpdated"
								  AllowDrop="True" Height="483" VerticalAlignment="Top" Width="135">
							<TreeViewItem x:Name="Characters_TVL" Header="Characters"> <!--ItemsSource="{Binding Items}"-->
									<!--HierarchicalDataTemplate DataType="{x:Type lib:Character}" ItemsSource="{Binding Items}"-->
										<!--TextBlock Text="{Binding Items.Name}" /-->
									<!--/HierarchicalDataTemplate-->
							</TreeViewItem>
						</TreeView>

					</DockPanel>
				</Grid>
            </Grid>
               
        </Grid>
    </Border>
</Window>
